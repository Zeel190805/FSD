<h1>Edit Product</h1>
<form action="/edit-product-process" method="POST">
  <input type="hidden" name="id" value="<%= product._id %>">
  <label for="name">Product Name:</label>
  <input type="text" id="name" name="name" value="<%= product.pname %>" required><br><br>
  <label for="price">Price:</label>
  <input type="number" id="price" name="price" value="<%= product.pprice %>" required><br><br>
  <label for="description">Description:</label>
  <textarea id="description" name="description" required><%= product.pdetail %></textarea><br><br>
  <button type="submit">Update Product</button>
</form>
